.container#main
	.col-md-4.col-sm-12.col-xs-12#map_area
		#index-map.well
		%p ご覧になりたい地域をクリックしてください。
	.col-md-8.col-sm-12.col-xs-12
		.jumbotron
			%p.lead 
				山岡家の店舗は全国#{Shop.active.size}店舗。
				%br
				お近くの山岡家にぜひお越しください。
		-cache do
			- @regions.each do |r|
				%h3=r.name
				.clearfix
					- r.prefectures.each do |p|
						- p.areas.each do |area|
							-unless area.shops.empty?
								.col-md-3.col-xs-12
									.panel.panel-default
										.panel-heading
											%h4
												=area.prefecture.name
												=area.name unless area.whole_prefecture
										.list-group
											-area.shops.each do |s|
												=link_to shop_details_path(s.id),class: 'list-group-item' do
													=s.name