:ruby
	persons = I18n.t('interview.graduates.persons')
	persons.each do |p|
		@person = p if p[:personid] == params[:personid]
	end
.modal.fade#myModal{tabindex: -1,role: :dialog,aria:{labelledby: :myModalLabel,hidden: true}}
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{type: :button,data:{dismiss: :modal},aria:{hidden:true}} &times;
				%h4.modal-title=@person[:lead]
			.modal-body
				.picture
					=ymage_tag @person[:image].to_s
					.actions
						%h4
							=@person[:name]
							%small=@person[:furigana]
						%p=@person[:status]
				-@person[:text].each do |t|
					%p=t