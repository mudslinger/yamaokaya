.panel.panel-default
	.panel-heading
		%h3.panel-title
			%span.glyphicon.glyphicon-pin
			=t :title,scope: [ctrl,act]
			.label.label-info=t :title,scope: [ctrl]
	.panel-body
		=ymage_tag 'images/corporate/business/safety.png' ,cls: 'img-rounded',:height => 100, :crop => :fill,align: :left,size: :origin
		%p.truncate=t(:bodies,scope: [ctrl,act])[0]
	.panel-footer.text-right
		=link_to '続きを読む',{controller: ctrl,action: act},class: "btn btn-primary"